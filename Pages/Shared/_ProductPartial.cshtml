@model SSDeShopOnWeb.ViewModels.ProductVM
<form asp-page="/ShoppingCart/Index" method="post">
    <img class="app-product-thumbnail" src="@Model.PictureUri" />
    <input class="app-product-addcart-button" type="submit" value="[ Add To Cart ]" />
    <div class="app-product-name">
        <span>@Model.Name</span>
    </div>
    <div class="app-product-price">
        <span>@Model.Price.ToString("C")</span><input type="number" asp-for="@Model.Quantity" name="quantity" />
    </div>
    <input type="hidden" asp-for="@Model.Id" name="id" />
    <input type="hidden" asp-for="@Model.Name" name="name" />
    <input type="hidden" asp-for="@Model.Price" name="price" />
    <input type="hidden" asp-for="@Model.PictureUri" name="pictureUri" />
</form>
